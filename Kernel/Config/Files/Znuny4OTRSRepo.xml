                    <Link>Action=AgentStatistics;Subaction=Overview</Link>
                    <LinkOption></LinkOption>
                    <NavBar>Reports</NavBar>
                    <Type>Menu</Type>
                    <Description Translatable="1"></Description>
                    <Prio>8500</Prio>
                    <Block>ItemArea</Block>
                    <AccessKey></AccessKey>
                </NavBar>
                <NavBar>
                    <GroupRo>stats</GroupRo>
