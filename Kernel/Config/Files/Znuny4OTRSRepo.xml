<?xml version="1.0" encoding="utf-8" ?>
<otrs_config version="1.0" init="Application">
    <ConfigItem Name="Znuny4OTRSPrivatRepos" Required="0" Valid="0">
        <Description Translatable="1">Define private addon repos.</Description>
        <Group>Znuny4OTRS-Repo</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Hash>
                <Item Key="API-KEY">My Addons</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Znuny4OTRSRepoType" Required="1" Valid="1">
        <Description Translatable="1">Access repos via http or https.</Description>
        <Group>Znuny4OTRS-Repo</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Option SelectedID="https">
                <Item Key="https">https</Item>
                <Item Key="http">http</Item>
            </Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Znuny4OTRSCloudServiceProxyURL" Required="1" Valid="1">
        <Description Translatable="1">This configuration defines the URL to the OTRS CloudService Proxy service. The http or https prefix will be added, depending on selection SysConfig 'Znuny4OTRSRepoType'.</Description>
        <Group>Znuny4OTRS-Repo</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <String Regex="">portal.znuny.com/api/otrs_cloud_service/</String>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Znuny4OTRSRepoDisable" Required="1" Valid="1">
        <Description Translatable="1">Disable online repos, e. g. for production system where new direct access to repos is needed.</Description>
        <Group>Znuny4OTRS-Repo</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Option SelectedID="0">
                <Item Key="1">Disable Online Repos</Item>
                <Item Key="0">Enable Online Repos</Item>
            </Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="PackageVerification" Required="1" Valid="1">
        <Description Translatable="1">This configuration defines if the OTRS package verification should be active or disabled. If disabled all packages are shown as verified. It's still recommended to use only verified packages.</Description>
        <Group>Znuny4OTRS-Repo</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Option SelectedID="1">
                <Item Key="1">Active</Item>
                <Item Key="0">Disabled</Item>
            </Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Output::FilterElementPost###Znuny4OTRSRepo" Required="1" Valid="1">
        <Description Translatable="1">This configuration registers a Output post-filter to extend package verification.</Description>
        <Group>Znuny4OTRS-Repo</Group>
        <SubGroup>OutputFilter</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::FilterElementPost::Znuny4OTRSRepo</Item>
                <Item Key="Templates">
                    <Hash>
                        <Item Key="AdminPackageManager">1</Item>
                    </Hash>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Module###AdminRegistration" Required="0" Valid="0">
        <Description Translatable="1">Frontend module registration for the agent interface.</Description>
        <Group>Znuny4OTRS-Repo</Group>
        <SubGroup>Frontend::Admin::ModuleRegistration</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Group>admin</Group>
                <Description>Admin</Description>
                <Title Translatable="1">System Registration</Title>
                <NavBarName>Admin</NavBarName>
                <NavBarModule>
                    <Module>Kernel::Output::HTML::NavBarModuleAdmin</Module>
                    <Name Translatable="1">System Registration</Name>
                    <Description Translatable="1">Manage system registration.</Description>
                    <Block>System</Block>
                    <Prio>350</Prio>
                </NavBarModule>
                <Loader>
                    <CSS>Core.Agent.Admin.Registration.css</CSS>
                </Loader>
            </FrontendModuleReg>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Package::ShowFeatureAddons" Required="0" Valid="0" ConfigLevel="200">
        <Description Translatable="1">Toggles display of OTRS FeatureAddons list in PackageManager.</Description>
        <Group>Znuny4OTRS-Repo</Group>
        <SubGroup>Core::Package</SubGroup>
        <Setting>
            <Option SelectedID="1">
                <Item Key="0">No</Item>
                <Item Key="1">Yes</Item>
            </Option>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Daemon::SchedulerCronTaskManager::Task###OTRSBusinessEntitlementCheck" Required="0" Valid="0" ReadOnly="0" ConfigLevel="100">
        <Description Translatable="1">Checks the entitlement status of OTRS Business Solution™.</Description>
        <Group>Daemon</Group>
        <SubGroup>Daemon::SchedulerCronTaskManager::Task</SubGroup>
        <Setting>
            <Hash>
                <Item Key="TaskName">OTRSBusinessEntitlementCheck</Item>
                <Item Key="Schedule">25,45 */1 * * *</Item> <!-- default: each hour in the minute 15 and 45 -->
                <Item Key="Module">Kernel::System::Console::Command::Maint::OTRSBusiness::EntitlementCheck</Item>
                <Item Key="Function">Execute</Item>
                <Item Key="MaximumParallelInstances">1</Item>
                <Item Key="Params">
                    <Array>
                    </Array>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Daemon::SchedulerCronTaskManager::Task###OTRSBusinessAvailabilityCheck" Required="0" Valid="0" ReadOnly="0" ConfigLevel="100">
        <Description Translatable="1">Checks the availability of OTRS Business Solution™ for this system.</Description>
        <Group>Daemon</Group>
        <SubGroup>Daemon::SchedulerCronTaskManager::Task</SubGroup>
        <Setting>
            <Hash>
                <Item Key="TaskName">OTRSBusinessAvailabilityCheck</Item>
                <Item Key="Schedule">15,35,55 */1 * * *</Item> <!-- default: each hour in the minute 15,35 and 55 -->
                <Item Key="Module">Kernel::System::Console::Command::Maint::OTRSBusiness::AvailabilityCheck</Item>
                <Item Key="Function">Execute</Item>
                <Item Key="MaximumParallelInstances">1</Item>
                <Item Key="Params">
                    <Array>
                    </Array>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Module###AgentStatistics" Required="0" Valid="1">
