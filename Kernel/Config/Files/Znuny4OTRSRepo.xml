    <ConfigItem Name="Notification::Transport###NotificationView" Required="0" Valid="0">
        <Description Translatable="1">Defines all the parameters for this notification transport.</Description>
        <Group>Ticket</Group>
        <SubGroup>Frontend::Admin::AdminNotificationEvent</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::System::Ticket::Event::NotificationEvent::Transport::NotificationView</Item>
                <Item Key="Name">Web View</Item>
                <Item Key="Icon">fa fa-th-list</Item>
                <Item Key="Prio">110</Item>
                <Item Key="IsOTRSBusinessTransport">1</Item>
                <Item Key="AgentEnabledByDefault">0</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Notification::Transport###SMS" Required="0" Valid="0">
        <Description Translatable="1">Defines all the parameters for this notification transport.</Description>
        <Group>Ticket</Group>
        <SubGroup>Frontend::Admin::AdminNotificationEvent</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::System::Ticket::Event::NotificationEvent::Transport::SMS</Item>
                <Item Key="Name">SMS (Short Message Service)</Item>
                <Item Key="Icon">fa fa-mobile</Item>
                <Item Key="Prio">120</Item>
                <Item Key="IsOTRSBusinessTransport">1</Item>
                <Item Key="AgentEnabledByDefault">0</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Module###AdminCloudServices" Required="0" Valid="0">
        <Description Translatable="1">Frontend module registration for the agent interface.</Description>
        <Group>Framework</Group>
        <SubGroup>Frontend::Admin::ModuleRegistration</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Group>admin</Group>
                <Description>Admin</Description>
                <Title Translatable="1">Cloud Services</Title>
                <NavBarName>Admin</NavBarName>
                <NavBarModule>
                    <Module>Kernel::Output::HTML::NavBar::ModuleAdmin</Module>
                    <Name Translatable="1">Cloud Services</Name>
                    <Description Translatable="1">Manage OTRS Group cloud services.</Description>
                    <Block>System</Block>
                    <Prio>380</Prio>
                </NavBarModule>
                <Loader>
                    <CSS>Core.Agent.Admin.CloudServices.css</CSS>
                </Loader>
            </FrontendModuleReg>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Module###AdminOTRSBusiness" Required="0" Valid="0">
        <Description Translatable="1">Frontend module registration for the agent interface.</Description>
        <Group>Framework</Group>
        <SubGroup>Frontend::Admin::ModuleRegistration</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Group>admin</Group>
                <Description>Admin</Description>
                <Title>OTRS Business Solution™</Title>
                <NavBarName>Admin</NavBarName>
                <NavBarModule>
                    <Module>Kernel::Output::HTML::NavBar::ModuleAdmin</Module>
                    <Name>OTRS Business Solution™</Name>
                    <Description Translatable="1">Deploy and manage OTRS Business Solution™.</Description>
                    <Block>System</Block>
                    <Prio>360</Prio>
                </NavBarModule>
                <Loader>
                    <CSS>Core.Agent.Admin.OTRSBusiness.css</CSS>
                </Loader>
            </FrontendModuleReg>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::NotifyModule###100-OTRSBusiness" Required="0" Valid="0">
        <Description Translatable="1">Defines the module to display a notification in different interfaces on different occasions for OTRS Business Solution™.</Description>
        <Group>Framework</Group>
        <SubGroup>Frontend::Agent::ModuleNotify</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::Notification::AgentOTRSBusiness</Item>
                <Item Key="Group">admin</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="CustomerFrontend::NotifyModule###1-OTRSBusiness" Required="0" Valid="0">
        <Description Translatable="1">Defines the module to display a notification in different interfaces on different occasions for OTRS Business Solution™.</Description>
        <Group>Framework</Group>
        <SubGroup>Frontend::Customer::ModuleNotify</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::Notification::CustomerOTRSBusiness</Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Daemon::SchedulerCronTaskManager::Task###RegistrationUpdateSend" Required="0" Valid="0" ReadOnly="0" ConfigLevel="100">
        <Description Translatable="1">Sends registration information to OTRS group.</Description>
        <Group>Daemon</Group>
        <SubGroup>Daemon::SchedulerCronTaskManager::Task</SubGroup>
        <Setting>
            <Hash>
                <Item Key="TaskName">RegistrationUpdateSend</Item>
                <Item Key="Schedule">30 * * * *</Item> <!-- default: every hour in minute 30 -->
                <Item Key="Module">Kernel::System::Console::Command::Maint::Registration::UpdateSend</Item>
                <Item Key="Function">Execute</Item>
                <Item Key="MaximumParallelInstances">1</Item>
                <Item Key="Params">
                    <Array>
                    </Array>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Daemon::SchedulerCronTaskManager::Task###SupportDataCollectAsynchronous" Required="0" Valid="0" ReadOnly="0" ConfigLevel="100">
        <Description Translatable="1">Collect support data for asynchronous plug-in modules.</Description>
        <Group>Daemon</Group>
        <SubGroup>Daemon::SchedulerCronTaskManager::Task</SubGroup>
        <Setting>
            <Hash>
                <Item Key="TaskName">SupportDataCollectAsynchronous</Item>
                <Item Key="Schedule">1 * * * *</Item> <!-- default: every hour in minute 1 -->
                <Item Key="Module">Kernel::System::Console::Command::Maint::SupportData::CollectAsynchronous</Item>
                <Item Key="Function">Execute</Item>
                <Item Key="MaximumParallelInstances">1</Item>
                <Item Key="Params">
                    <Array>
                    </Array>
                </Item>
            </Hash>
        </Setting>
    </ConfigItem>
    <ConfigItem Name="Frontend::Output::FilterElementPost###Znuny4OTRSRemoveBSAdvertisements" Required="0" Valid="1">
        <Description Translatable="1">This configuration registers an OutputFilter module that removes OTRS Business Solution TM advertisements.</Description>
        <Group>Znuny4OTRS-Repo</Group>
        <SubGroup>Core::Web</SubGroup>
            <Setting>
                <Hash>
                    <Item Key="Module">Kernel::Output::HTML::FilterElementPost::Znuny4OTRSRemoveBSAdvertisements</Item>
                    <Item Key="Templates">
                        <Hash>
                            <Item Key="Error">1</Item>
                            <Item Key="AdminCloudServices">1</Item>
                            <Item Key="AdminNotificationEvent">1</Item>
                            <Item Key="AdminProcessManagement">1</Item>
                            <Item Key="AdminAppointmentNotificationEvent">1</Item>
                            <Item Key="Footer">1</Item>
                        </Hash>
                    </Item>
                </Hash>
            </Setting>
    </ConfigItem>
